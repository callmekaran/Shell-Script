stages:         
  - build
  - deploy

cache:
  paths:
    - node_modules/

build-job:      
  stage: build
  script:
    - echo "REACT_APP_API_URL=REACT_APP_API_URL_DEV" > .env
    - echo "REACT_APP=True" >> .env
    - npm install
    - npm run build

  artifacts:
    paths:
    - build/

  only:
    - dev

deploy:
  stage: 'deploy'
  script:
    - rsync -av --exclude=.htaccess --exclude=.well-known build/ /var/www/html/moon-map/
  only:
    - dev
